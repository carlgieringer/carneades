.container.project(my-loading-spinner='viewLoading')
  .row
    .col-md-12
      .section#projects
        .page-header
          h1(translate='projects.headline')

        accordion
          accordion-group(ng-repeat='project in projects')
            accordion-heading
              span.arrow
              markdown(ng-model='project.title', strip='true')

            .section#commands
              button.btn.btn-default.btn-small(
                type='button',
                ng-click='copyLink(project.id)')
                i.fa.fa-copy: span copy link

              button.btn.btn-default.btn-small(
                type='button',
                ng-click='open(project.id)')
                i.fa.fa-folder-open-o: span open

            .section
              markdown(strip='true', ng-model='project.description')
