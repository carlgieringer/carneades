h2 {{title}}

.section#commands
  button.btn.btn-default.btn-small(
    type='button',
    tooltip="{{'tooltip.legalprofile.save' | translate}}",
    tooltip-append-to-body="true",
    tooltip-placement="right", 
    ng-click="save()")
    i.fa.fa-save: span {{'projects.save' | translate}}

  button.btn.btn-default.btn-small(
    type='button',
    tooltip="{{'tooltip.legalprofile.cancel' | translate}}",
    tooltip-append-to-body="true",
    tooltip-placement="right", 
    ng-click="cancel()")
    i.fa.fa-cancel: span {{'projects.cancel' | translate}}

ul
  li(ng-repeat='scheme in section.schemes')
    a(ui-sref='home.projects.project.legalprofiles.legalprofile({pid: $stateParams.pid, scrollTo: scheme.id})', ng-class="{'schemeOut': isSchemeOut(legalprofile, scheme), 'schemeIn': isSchemeIn(legalprofile, scheme), 'schemeUndecided': isSchemeUndecided(legalprofile, scheme)}") {{scheme.header.title}}
ul
  li(ng-repeat='section in section.sections','ng-include'="'projects/project/legalprofiles/legalprofile/legalprofile-edit-subtoc.jade'")
