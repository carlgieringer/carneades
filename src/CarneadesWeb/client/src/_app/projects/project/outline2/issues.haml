.page-header
  %h1 Main Issues
%ul.list-group
  %li.list-group-item{"ng-repeat" => "issue in issues"}
    %a.statement{"ui-sref" => "home.projects.project.statement({pid: pid, db: db, sid: issue.id})", rel: "address:{{ issue.url }}", id: "statement{{ issue.id }}"}
      %markdown{:strip => "true", "ng-model" => "issue.text"}
