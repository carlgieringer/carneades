.container.argument
  .row
    .col-md-9(role='argument-view')
      .section#title
        .page-header.breadcrumb
          span.project-root
            evaluation-indicator(value='argument.value',size='32x32',position='after')
              span {{'projects.argument' | translate}}
          span.seperator &nbsp;/&nbsp;
          span.fa.fa-edit.project-new(tooltip="Edit this argument" tooltip-append-to-body="true" tooltip-placement="right", ng-click="edit()")

        div(ng-hide='headerIsEmpty')
          metadata(model='argument.header')

      .section#premises(ng-hide='argument.premises.length == 0')
        .premises-indication {{'projects.premises_text' | translate}}
      
        ul(ng-repeat='p in argument.premises')
          li
            span(ng-hide="p.role == ''") {{p.role}}.
            span(ng-show="!p.positive")
              span {{'projects.negative_premise' | translate}}
            a(ui-sref='home.projects.project.statements.statement({pid: $stateParams.pid, db: $stateParams.db, sid: p.id})') {{p.text}}

      .section#conclusion
        .conclusion-indication {{conclusion_text}}
        a.conclusion-text(ui-sref='home.projects.project.statements.statement({pid: $stateParams.pid, db: $stateParams.db, sid: argument.conclusion.id})') {{argument.conclusion.text}}

      .section#properties
        properties(keys="[['valueText', 'projects.value'],['scheme', 'projects.scheme'],['strict', 'projects.strict'],['weight', 'projects.weight'],['id', 'projects.id']]",model='argument')
