.container.statement.editor
  .row
    .col-sm-11
      .row
        .col-sm-offset-2.col-sm-10
          .section
            .page-header: h1(ng-bind='title')

      form.form-horizontal(name="form", novalidate)
        form-group
          tabset
            tab(heading='Model',select='showModel()')
            tab(heading='Metadata',select='showMetadata()')

        div(ng-show='tabModel')           
          form-group(label-key='projects.main_issues')
            radio-buttons(model='statement.main')
    
          form-group(label-key='projects.atom')
            textarea.form-control.input-md(
              ui-codemirror,
              ui-codemirror-opts="editorOptions",
              ng-model="statement.atom",
              placeholder="optional")
    
          form-group(label-key='projects.text')
            multilang-hallo-editor(
              ng-model='statement.text',
              languages='languages',
              name='text')
              
          form-group(label-key='projects.standard')
            select(
              ng-model='statement.standard',
              ng-options="standard.value as standard.name for standard in standards")

          form-group(label-key='projects.weight')
            .col-sm-1
              .form-control-static: span(ng-bind='statement.weight | doublePrecision')
            .col-sm-11(
              style='margin: 12px 0px 0px !important;',
              ui-slider,
              min='0.00',
              max='1.00',
              step='0.05',
              use-decimals,
              ng-model='statement.weight')
            
        div(ng-show='tabMetadata')
          metadata-edit-tab(ng-model='statement.header')

        form-group-no-label
          button.btn.btn-default.btn-xs(
            type='button',
            ng-click='onSave()',
            tooltip="{{tooltipSave}}",
            tooltip-append-to-body="true",
            tooltip-placement="top",
            ng-disabled="form.$invalid")
            i.fa.fa-floppy-o: span(translate='projects.save')
      
          button.btn.btn-default.btn-xs(
            type='button',
            ng-click='onCancel()',
            tooltip="{{tooltipCancel}}",
            tooltip-append-to-body="true",
            tooltip-placement="top")
            i.fa.fa-times: span(translate='projects.cancel')
