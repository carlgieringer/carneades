.container.statement
  .container.node
    .row
      .col-md-9(role='statement-view')
        .section#title
          .page-header.breadcrumb
            span.project-root
              evaluation-indicator(value='statement.value',size='32x32',position='after')
                span {{'projects.statement' | translate}}
            span.seperator &nbsp;/&nbsp;
            span.fa.fa-edit.project-new(tooltip="Edit this statement" tooltip-append-to-body="true" tooltip-placement="right", ng-click="edit()")

          .statement-text {{statement.text}}

          div(ng-hide='headerIsEmpty')
            metadata(model='statement.header')

        .section.pro-arguments#pro(ng-hide="statement.pro.length == 0")
          .span.argument-indication {{'projects.statement.pro_arguments' | translate}}
          ul(ng-repeat='arg in statement.pro')
            li
              a(ui-sref='home.projects.project.arguments.argument({pid: pid, db: db, aid: arg.id})')
                {{argumentName(arg, $index)}}
              ul(ng-repeat='p in arg.premises')
                li
                  span(ng-show="!p.positive")
                    span {{'projects.negative_premise' | translate}}
                  a(ui-sref='home.projects.project.statements.statement({pid: pid, db: db, sid: p.id})')
                    {{p.text}}
  
        .section.con-arguments#con(ng-hide="statement.con.length == 0")
          .span.argument-indication {{projects.statement.con_arguments | translate}}
          ul(ng-repeat='arg in statement.con')
            li
              a(ui-sref='home.projects.project.arguments.argument({pid: pid, db: db, aid: arg.id})')
                {{argumentName(arg, $index)}}
              ul(ng-repeat='p in arg.premises')
                li
                  span(ng-show="!p.positive")
                    span{{'projects.negative_premise' | translate}}
                  a(ui-sref='home.projects.project.statements.statement({pid: pid, db: db, sid: p.id})')
                    {{p.text}}
  
        .section.premises-of#premises(ng-hide="statement['premise-of'].length == 0")
          .span.premise-of-indication {{'projects.statement.premise_of' | translate}}
          ul(ng-repeat="arg in statement['premise-of']")
            li
              a(ui-sref='home.projects.project.arguments.argument({pid: pid, db: db, aid: arg.id})')
                {{argumentName(arg, $index)}}
  
        .section#properties
          properties(keys="[['valueText', 'projects.value'],['standard', 'projects.standard'],['weight', 'projects.weight'],['main', 'projects.main_issues'],['atom', 'projects.atom'],['id', 'projects.id']]",model="statement")
