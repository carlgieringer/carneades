div(my-loading-spinner='viewLoading')
  .page-header
    h1 Main Issues
  ul.list-group.icon
    li.list-group-item(ng-repeat='issue in issues',evaluation-indicator,value='issue.value',size='24x24',position='before')
      span
        a.statement(ui-sref='home.projects.project.statements.statement({pid: $stateParams.pid, db: $stateParams.db, sid: issue.id})',rel='address:{{ issue.url }}',id='statement{{ issue.id }}') {{issue.text}}
