.container.project
  .row
    .col-md-12(role='main')
      .section#overview(my-loading-spinner='viewLoading')
        .page-header
          h1.highlight {{project.title}}

      .section#commands
        button.btn.btn-default.btn-small(
          type='button',
          ng-click='openOutlineEditor()',
          tooltip="{{tooltipEdit}}",
          tooltip-append-to-body="true",
          tooltip-placement="top")
          i.fa.fa-edit: span edit

        button.btn.btn-default.btn-small(
          type='button',
          ng-click='openStatementEditor()',
          tooltip="{{tooltipNewStatement}}" ,
          ooltip-append-to-body="true",
          tooltip-placement="top")
          i.fa.fa-plus-square-o: span new statement

        button.btn.btn-default.btn-small(
          type='button',
          ng-click='openArgumentEditor()',
          tooltip="{{tooltipNewArgument}}",
          tooltip-append-to-body="true",
          tooltip-placement="top")
          i.fa.fa-plus-square-o: span new argument
          
      .section#description
        markdown(strip='true',ng-model='project.description')

      .section#issues(ui-view='issues')

      .section#outline(ui-view='outline')

      .section#references(ui-view='references')
