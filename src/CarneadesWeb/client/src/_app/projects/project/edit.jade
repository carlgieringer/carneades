.container.project.edit
  .row
    .col-sm-11
      .row
        .col-sm-offset-2.col-sm-10
          .section
            .page-header
              h1(translate='projects.edit')

      form.form-horizontal(name="form", novalidate)
        form-group(label-key='projects.edit.name')
          .form-control-static
            span(style='font-family: monospace;font-weight:bold;') {{project.id | translate}}
            
        form-group(label-key='projects.metadata.title')
          input.form-control.input-md(
            name="title",
            placeholder="{{placeholderTitle}}",
            type="text",
            ng-model="project.title")

        form-group(label-key='projects.edit.policies')
          input.form-control.input-md(
            name="policy",
            placeholder="{{placeholderPolicy}}",
            type="text",
            ng-model="project.policies")

        form-group(label-key='projects.scheme')
          input.form-control.input-md(
            name="scheme",
            placeholder="{{placeholderScheme}}",
            type="text",
            ng-model="project.schemes")
          
        form-group(label-key='projects.description')
          multilang-hallo-editor(
            ng-model='project.description', 
            languages='languages', 
            name='text')
            
        form-group-no-label
          button.btn.btn-default.btn-xs(
            type='button',
            ng-click='onSave()',
            tooltip="{{tooltipSave}}",
            tooltip-append-to-body="true",
            tooltip-placement="top",
            ng-disabled="form.$invalid")
            i.fa.fa-floppy-o: span(translate='projects.save')

          button.btn.btn-default.btn-xs(
            type='button',
            ng-click='onCancel()',
            tooltip="{{tooltipCancel}}",
            tooltip-append-to-body="true",
            tooltip-placement="top")
            i.fa.fa-times: span(translate='projects.cancel')
