        div(style='height:200px;width:100%;',hallo="{toolbar:'halloToolbarFixed',plugins:{'halloformat':{'bold':true},'halloheadings':{},'halloreundo':{},'hallolists':{},'halloindicator':{}}}",ng-model='model.description[v[0]]',name='description_{{v[0]}}',id='description_{{v[0]}}') {{model.description[lang]}}
  
