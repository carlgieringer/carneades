div.btn-group
  button.btn.btn-default.small-font(
    type='button',
    ng-class='{active: model == true}',
    ng-click='activate(true)',
    ng-bind="'projects.pro' | translate | capitalize:'first'")
  button.btn.btn-default.small-font(
    type='button',
    ng-class='{active: model == false}',
    ng-click='activate(false)',
    ng-bind="'projects.con' | translate | capitalize:'first'")
